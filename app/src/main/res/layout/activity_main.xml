<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo_g50_70.progressbar.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.lenovo_g50_70.progressbar.HorizontalProgressbarWithProgress
            android:id="@+id/progress01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="0"
            app:progress_reach_color="#ffff0000"
            app:progress_text_color="#ffff0000"
            app:progress_unreach_color="#ffff0000"/>

        <com.example.lenovo_g50_70.progressbar.HorizontalProgressbarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#44ff0000"
            android:padding="15dp"
            android:progress="30"/>

        <com.example.lenovo_g50_70.progressbar.HorizontalProgressbarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="50"
            app:progress_text_color="#44ff0000"
            app:progress_unreach_color="#ffff0000"/>

        <com.example.lenovo_g50_70.progressbar.RoundProgressbarWithProgress
            android:id="@+id/progress02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="30"
            app:progress_text_color="#ff000000"
            app:progress_text_size="20sp"
            app:progress_unreach_color="#ffff0000"
            app:radius="40dp"/>

        <com.example.lenovo_g50_70.progressbar.RoundProgressbarWithProgress
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="80"
            app:progress_text_color="#ff000000"
            app:progress_text_size="20sp"
            app:progress_unreach_color="#ffff0000"
            app:radius="60dp"/>
    </LinearLayout>

</ScrollView>
